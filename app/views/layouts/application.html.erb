<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "NaiRuby - Ruby User Group" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "NaiRuby" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
		<div class="colors_bar" >
			<span class="f1"></span>
			<span class="f2"></span>
			<span class="f3"></span>
			<span class="f4"></span>
			<span class="f5"></span>
		</div>
    </header>
    <div class="pagination main_nav_bar">
    <ul>
    <li><%= link_to "Home", root_path %></li>
    <li><a href="#">Members</a></li>
    <li><%= link_to "Discussions", discussions_path %></li>
    <li><a href="#">Photos</a></li>
    </ul>
    </div>
	<div id="wrap">
    	<div id="main" role="main">
	      <div class="container">
	        <div class="content">
	           <div class="row">
				<div class="span3">
					<%= render 'layouts/sidebar' %>
	            </div><!--/span-->
	            <div class="span9">
	              <%= render 'layouts/messages' %>
	              <%= yield %>
	            </div>
	          </div>
	        </div>
	      </div> <!--! end of .container -->
	    </div> <!--! end of #main -->
	</div> <!--! end of #wrap -->
	<%= render 'layouts/footer' %>
  </body>
</html>