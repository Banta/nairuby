<%- model_class = Discussion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<% @discussions.each do |discussion| %>
	<p><%= link_to discussion.title, discussion_path(discussion) %>&nbsp;By&nbsp;<%= discussion.user_id %></p>
<% end %>

<br /><br /><%= link_to t('.new', :default => t("helpers.links.new")),
            new_discussion_path,
            :class => 'btn btn-primary' %>
