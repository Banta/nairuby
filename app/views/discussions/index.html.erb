<%- model_class = Discussion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<h1>jhh</h1>
<% @discussions.each do |discussion| %>
	<p class>
		<h5><%= link_to discussion.title, discussion %></h5>
		<%= discussion.post[0..100] %><br />
		<% unless discussion.post[100..160].nil? %>
			<%= discussion.post[100..160] << "..." %><br />
		<% end %>
		<%= link_to discussion.title, "#{discussion_path(discussion)}#disqus_thread" %>
		&nbsp;Created By&nbsp;
		<%= link_to discussion.user.name, user_path(discussion.user) %>
	</p>
<% end %>

<br /><br /><%= link_to t('.new', :default => t("helpers.links.new")),
            new_discussion_path,
            :class => 'btn btn-primary' %>
