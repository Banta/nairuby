<h1>Community members</h1>

<% for i in 1..@rows do%>
	<div class="row-fluid">
	  <ul class="thumbnails">
	  	<% for j in 0..3 do %>
	  		<% user = User.find(@arr_users[(4*i)-(3-j)-1]) %>
		    <li class="span3">
		      <div class="thumbnail">
		        <%= image_tag(avatar_url(user)) %>
		        <div class="caption">
		          <b><%= user.name %></b>
		        </div>
		      </div>
		    </li>
	    <% end %>
	  </ul>
	</div>
<% end %>


<div class="row-fluid">
  <ul class="thumbnails">
  	<% for i in 1..@rem_rows do%>
  		<% user = User.find(@arr_users[((@members-@rem_rows)+i)-1]) %>

	    <li class="span3">
	      <div class="thumbnail">
			<%= image_tag(avatar_url(user)) %>
	        <div class="caption">
	          <b><%= user.name %></b>
	        </div>
	      </div>
	    </li>
    <% end %>
  </ul>
</div>
